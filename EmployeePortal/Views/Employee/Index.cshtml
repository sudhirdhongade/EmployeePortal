@{
}
@model IEnumerable<EmployeePortal.Models.Employee>
@{
    ViewData["Title"] = "Employees";
}

<h2>Employee List</h2>

<!-- Search Form -->
<form method="get">
    <input type="text" name="department" placeholder="Department" />
    <input type="number" step="0.01" name="minSalary" placeholder="Min Salary" />
    <input type="number" step="0.01" name="maxSalary" placeholder="Max Salary" />
    <button type="submit">Search</button>
</form>

<!-- Employee Table -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Salary</th>
            <th>Date Of Joining</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.FirstName @emp.LastName</td>
                <td>@emp.Email</td>
                <td>@emp.Department</td>
                <td>@emp.Salary</td>
                <td>@emp.DateOfJoining.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.EmployeeId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@emp.EmployeeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Add Employee Button -->
<a asp-action="Create" class="btn btn-primary">Add Employee</a>